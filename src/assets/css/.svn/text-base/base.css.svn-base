.modal-wrapper {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}

.modal-wrapper .modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: .5;
  background: #000;
  transition: .2s;
}

.modal-wrapper .modal-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  width: 85%;
  border-radius: 3px;
  overflow: hidden;
  min-height: 3rem;
  z-index: 1000;
  padding: 2rem 0 1rem;
}

.modal-wrapper .modal-box .modal-close {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 1rem;
  height: 1rem;
  text-align: center;
}

